<div class="flex flex-col text-center rounded-lg shadow w-[344px] h-[350px] divide-y divide-gray-200 font-['Inter']">
  <div>
    <a class="flex justify-center mt-8" href="{{ url }}">
      <figure class="child-object-cover w-32 h-32 rounded-full overflow-hidden">
        {{ image }}
      </figure>
    </a>
    <div class="m-8 mt-6">
      <a href="{{ url }}">
        <h3 class="text-sm leading-5 font-medium text-gray-900">{{ title }}</h3>
      </a>
      <div class="flex flex-col items-center mt-1">
        <h4 class="text-sm leading-5 font-normal text-gray-500 mb-3">{{ description }}</h4>
        <div class="bg-green-100 py-1 px-2 rounded-xl text-xs leading-4 font-medium text-green-800 w-fit">
          {{ role }}
        </div>
      </div>
    </div>
  </div>
  <div class="flex flex-row divide-x divide-gray-200">
    <a class="basis-1/2 flex flex-row justify-center items-center gap-x-2.5 px-0 pt-[17px] pb-[16px]" href="mailto:{{ email }}">
      <svg class="w-5 h-5 text-white" fill="#9CA3AF" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
      <span class="text-sm leading-5 font-medium text-gray-700">Email</span>
    </a>
    <a class="basis-1/2 flex flex-row justify-center items-center gap-x-2.5 px-0 py-4" href="tel:{{ number }}">
      <svg class="w-5 h-5 text-white" fill="#9CA3AF" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path></svg>
      <span class="text-sm leading-5 font-medium text-gray-700">Call</span>
    </a>
  </div>

</div>
