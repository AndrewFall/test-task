<div>
  {% if title %}
    <h2 class="text-center mb-6">
      {{ title }}
    </h2>
  {% endif %}

  <div class="grid grid-cols-fill-56 sm:grid-cols-fill-64 gap-x-4 md:gap-x-8 gap-y-4 md:gap-y-6">
    {% for row in rows %}
      <div{{ row.attributes }}>
        {{- row.content -}}
      </div>
    {% endfor %}
  </div>

</div>
