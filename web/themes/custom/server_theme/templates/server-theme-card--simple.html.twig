<div class="flex flex-col flex-grow-0 flex-shrink-0 w-56 rounded-lg shadow-lg sm:w-64">

  {% if url and image %}
  <a href="{{ url }}">
    <img class="object-cover w-full h-36 rounded-tl-md rounded-tr-md border-b border-gray-300" src="{{ image }}" alt="{{ image_alt }}" />
  </a>
  {% endif %}

  <div class="flex flex-col justify-between py-4 px-6 h-full">
      <div class="overflow-hidden h-20 text-lg font-bold leading-tight md:text-xl text-turquoise overflow-ellipsis hover:text-gray-800">
        {% if url %}
        <a href="{{ url }}">
        {% endif %}
          {{ title }}
        {% if url %}
        </a>
        {% endif %}
      </div>

      {% if body %}
        <div class="overflow-hidden mt-4 h-24 text-black">
          {{ body }}
        </div>
      {% endif %}

    <div class="flex overflow-hidden flex-row flex-wrap justify-start pt-2 mt-4 h-12 text-sm border-t border-gray-500 tags-wrapper">
    {% if tags %}
      {% for tag in tags %}
        {{ tag }}
      {% endfor %}
    {% endif %}
    </div>

  </div>
</div>
